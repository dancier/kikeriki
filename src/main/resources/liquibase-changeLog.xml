    <changeSet id="2023-12-28-01-add-mailoutbox" author="Marc">
        <sql>
            CREATE TABLE mail_outbox (
                id VARCHAR(256) PRIMARY KEY,
                status VARCHAR(256) NOT NULL,
                mail JSONB NOT NULL,
                created_at TIMESTAMP WITHOUT TIME ZONE
            );
        </sql>
    </changeSet>

